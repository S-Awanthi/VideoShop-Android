<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    SAVE BUTTON EFFECT WHEN PRESS -->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#999966" />
            <gradient android:angle="-90" android:startColor="#ccffdd" android:endColor="#ccffdd"  />
        </shape>
    </item>


    <!--    SAVE BUTTON EFFECT BEFORE PRESS -->
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#999966" />
            <gradient android:angle="-90" android:startColor="#ccffdd" android:endColor="#ccffdd" />
        </shape>
    </item>

</selector>
